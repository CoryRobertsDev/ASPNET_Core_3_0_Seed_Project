@model EquipmentManager.Models.Vendor

@{
    ViewData["Title"] = "Vendor Details";
}

<!--BreadCrumbs Start-->
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-5">
        <h2>Vendor Manager</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Vendors")">Vendor</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Details</strong>
            </li>
        </ol>
    </div>
</div>
<div class="row"></div>
<!--BreadCrumbs End-->
<!--Card Start-->
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="w-100">
        <div class="ibox ">
            <!--Card Header Start-->
            <div class="ibox-title bg-primary">
                <span class="h4">@Model.Name Details</span>
                <!--Card Title End-->
                <!--Header Action Buttons Start-->
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="fullscreen-link">
                        <i class="fa fa-expand"></i>
                    </a>
                </div>
                <!--Header Action Buttons Stop-->
            </div>
            <!--Card Header End-->
            <!--Card Body Start-->
            <div class="ibox-content">
                <div class="col-xl-auto">
                    <!--Form Start-->
                    <form asp-action="Details">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" readonly />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                                    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                                </div>
                            </div>
                        </div>
                    </form>
                    <!--Form End-->
                </div>
            </div>
            <!--Card Body End-->
        </div>
    </div>
</div>
<!--Card End-->


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}