@model EquipmentManager.Models.Assignment

@{
    ViewData["Title"] = "Delete Equipment";
}

<!--Breadcrumbs Start-->
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-12">
        <h2>Repair Manager</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Assignment")">Index</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Delete</strong>
            </li>
        </ol>
    </div>
</div>
<div class="row"></div>
<!--BreadCrumbs End-->
<!--Card Start-->
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="w-100">
        <div class="ibox ">
            <!--Card Header Start-->
            <div class="ibox-title bg-primary">
                <span class="h4">Delete Record: ID #@Model.Id</span>
                <!--Card Title End-->
                <!--Header Action Buttons Start-->
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="fullscreen-link">
                        <i class="fa fa-expand"></i>
                    </a>
                </div>
                <!--Header Action Buttons Stop-->
            </div>
            <!--Card Header End-->
            <!--Card Body Start-->
            <div class="ibox-content">
                <div class="col-xl-auto">
                    <h3>Are you sure you want to delete this?</h3>
                    <div>
                        <h4>Assignment</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ColleagueId)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ColleagueId)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.EquipmentId)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.EquipmentId)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Location)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Location)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Floor)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Floor)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.RoomNumber)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.RoomNumber)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.RequestingDepartment)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.RequestingDepartment)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.AssignedBy)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.AssignedBy)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.AssignedDate)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.AssignedDate)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.UnassignedBy)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.UnassignedBy)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.UnassignedDate)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.UnassignedDate)
                            </dd>
                        </dl>
                        <hr />
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a class="btn btn-primary" asp-action="Index">Back to List</a>


                        </form>
                        <!--Form End-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }
